# Productie Environment Template
# Kopieer dit bestand naar .env.prod en vul de echte waarden in

# Database (gebruik sterke wachtwoorden!)
POSTGRES_USER=kattenstichting
POSTGRES_PASSWORD=change_this_to_strong_password
POSTGRES_DB=kattenstichting_prod
DATABASE_URL=postgresql://kattenstichting:change_this_to_strong_password@db:5432/kattenstichting_prod

# Mollie Payment API (LIVE key voor productie!)
MOLLIE_API_KEY=live_your_real_mollie_api_key_here

# JWT Secret (genereer een sterke random string!)
JWT_SECRET=change_this_to_a_very_secure_random_string_at_least_32_chars

# Next.js (pas aan naar jouw domein)
NEXT_PUBLIC_API_URL=https://yourdomain.com
NODE_ENV=production
